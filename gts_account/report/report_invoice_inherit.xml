<!--                                        <span t-esc="amount_by_group[3]"/>-->
<!--                                    </td>-->
<!--                                </t>-->
                            </tr>
                        </t>
                        <tr class="text-uppercase o_total" style="border: 2px solid black;">
                            <td ><strong>Total</strong></td>
                            <td class="text-right" style="border-left: 2px solid black;">
                                <span t-field="o.amount_total"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
